<Page x:Class="Marathon2.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marathon2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid HorizontalAlignment="Left" Width="800">

        <Grid.RowDefinitions>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="113*"/>
            <RowDefinition Height="113*"/>
            <RowDefinition Height="66*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="204*"/>
            <ColumnDefinition Width="375*"/>
            <ColumnDefinition Width="221*"/>
        </Grid.ColumnDefinitions>
        <Button Name="ToRegPageButton" Click="ToRegPageButton_Click" Margin="0,15,1,5" Grid.Column="1" Grid.Row="1" FontSize="18">Я хочу стать бегуном</Button>
        <Button Name="ToRunnerTableButton" Grid.Column="1" Grid.Row="2" FontSize="18" Click= "ToRunnerTableButton_Click" >Посмотреть список бегунов</Button>
        <Button Grid.Column="1" Grid.Row="3" FontSize="18">Я хочу больше узнать о событии</Button>
        <Button Name ="ToAutorizPageButton"  Grid.Column="2" Grid.Row="4" FontSize="18" Click="ToAutorizPageButton_Click">Login</Button>
        <Frame NavigationUIVisibility="Hidden"  ></Frame>
    </Grid>
</Page>
