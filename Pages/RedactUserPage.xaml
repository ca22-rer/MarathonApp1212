<Page x:Class="Marathon2.Pages.RedactUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marathon2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RedactUserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="32*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="201*"/>
            <ColumnDefinition Width="226*"/>
            <ColumnDefinition Width="198*"/>
            <ColumnDefinition Width="175*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Grid.Row="0" FontSize="24" Margin="3,5,0,23" Grid.ColumnSpan="2" Grid.RowSpan="2">Редактирование пользователя</Label>
        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="18" Height="34" Width="56">Email:</Label>
        <Label Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" Margin="0,2,0,8" Height="34" Width="76">Пароль:</Label>
        <Label Grid.Column="2" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="18" Height="34" Width="167" Grid.ColumnSpan="2" Margin="0,0,163,6">Повторите пароль:</Label>
        <Label Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="18" Height="34" Width="49" Grid.ColumnSpan="2" Margin="0,0,223,4" >Имя:</Label>
        <Label Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" Margin="0,3,219,6" Height="34" Width="88" Grid.ColumnSpan="2">Фамилия:</Label>
        <Button Name="BackButton" Click="BackButton_Click" Margin="0,0,70,19" Grid.Column="2" Grid.Row="9">Отмена</Button>
        <Button Name="SaveButton" Click="SaveButton_Click" Margin="0,0,70,19" Grid.Column="1" Grid.Row="9">сохранить</Button>
        <TextBox Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Name="EmailTextBox"  Width="190" >Email@</TextBox>
        <TextBox Grid.Column="3" Grid.Row="3" HorizontalAlignment="Left" Name="PasswBox2"  Width="130" Margin="0,1,0,42" Grid.RowSpan="2" ></TextBox>
        <TextBox Grid.Column="3" Grid.Row="4" HorizontalAlignment="Left" Name="PasswBox22"  Width="130" TextChanged="PasswBox22_TextChanged" Margin="0,2,0,41" Grid.RowSpan="2" ></TextBox>
        <TextBox Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Name="ImTextBox" Margin="4,1,0,5" Width="190" >Имя</TextBox>
        <TextBox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Name="FamTextBox" Margin="4,2,0,3" Width="190" >Фамилия</TextBox>

    </Grid>
</Page>
