<Page x:Class="Marathon2.Pages.MenuAdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marathon2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuAdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Button Content="Благотворительная &#xD;&#xA;организация" x:Name="BlagOrgBtn" Click="BlagOrgBtn_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="80,10,10,80" Height="80" Width="300" FontSize="24"/>
            <Button Content="Инвентарь" x:Name="InventBtn" Click="InventBtn_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,10,80,80" Height="80" Width="300" FontSize="24" Padding="1"/>
            <Button Content="Пользаватели" x:Name="UserBtn" Click="UserBtn_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,80,10,10" Height="80" Width="300" FontSize="24"/>
            <Button Content="Волонтеры" x:Name="VolontBtn" Click="VolontBtn_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,80,80,10" Height="80" Width="300" FontSize="24"/>
        </Grid>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40"  Text="Меню администратора"></TextBlock>
    </Grid>
</Page>