<Page x:Class="Marathon2.Pages.RannerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marathon2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RannerPage">

    <Grid>
        <StackPanel Orientation="Vertical" >
            <Label Content="{Binding CurrentRunner.User.FirstName}" ></Label>
            <Label Content="{Binding CurrentRunner.Email}"  ></Label>
            <Label Content="{Binding CurrentRunner.Gender}"  ></Label>
            <Label Content="{Binding CurrentRunner.DateOfBirth}"  ></Label>
            <Label Content="{Binding CurrentRunner.Country.CountryName}"></Label>
            <Label Content="{Binding CurrentRunner.Role.RoleName}"></Label>

        </StackPanel>



    </Grid>
</Page>
